{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Edit Item</h3>
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.url) }}
                {{ form_row(form.tags) }}
                <div style="margin-top: 5px;">
                {{ form_widget(form.submit) }}
                {{ form_widget(form.submit_return) }}
                {{ form_widget(form.submit_delete) }}
                </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
