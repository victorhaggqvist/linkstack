{% extends 'base.html.twig' %}
{% from '::macros.html.twig' import favicon %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Push new</h3>

                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'pushform'}}) }}
                    <div class="form-group">
                        <label class="control-label col-lg-2 required" for="form_title">Title</label>
                        <div class="col-lg-10">
                            <input type="text" id="form_title" name="form[title]" required="required" autocomplete="off" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 required" for="form_url">Url</label>
                        <div class="col-lg-10">
                            <input type="text" id="form_url" name="form[url]" required="required" autocomplete="off" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2" for="form_tags">Tags</label>
                        <div class="col-lg-10">
                            <input type="text" id="form_tags" name="form[tags]" autocomplete="off" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" id="form_save" name="form[save]" class="btn-block btn btn-primary">Push</button>
                        </div>
                    </div>
                    <input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}">
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>Recently pushed</h3>
                <table id="recentlist" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>URL</th>
                        <th>Title</th>
                        <th>Tags</th>
                        <th>Timestamp</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in items %}
                        <tr>
                            <td>{{ favicon(i.url) }}<a href="{{ i.url }}">{{ i.url|truncate(55) }}</a></td>
                            <td title="{{ i.title }}">{{ i.title|truncate(50) }}</td>
                            <td title="{{ i.tags }}">{{ i.tags|truncate(25) }}</td>
                            <td class="date">{{ i.created | date('Y-m-d H:i') }}</td>
                            <td class="action"><button type="button" class="btn btn-default btn-sm delete-btn icon-button" data-id="{{ i.id }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{%  block javascripts %}
    <script src="{{ asset('js/linkstack.js') }}"></script>
{% endblock %}
